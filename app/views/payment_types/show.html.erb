<% flash.each do |key, message| %>
  <div class="alert alert-dismissible custom-alert <%= key.to_s == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<div class="container ">


    <div class="container-fluid">

  
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          
          
          <div class="card-footer text-muted">
           
            <h1 class="text-center mt-4"><strong>Payment Type: </strong><%= @payment_type.name %></h1>
            
            
    
            
            <small>Created <%= time_ago_in_words(@payment_type.created_at) %> ago, 
            </small>
          </div>
          <div class="buttons d-flex justify-content-md-center">
          <div class="card text-dark m-5" style="max-width: 12rem;">
              <%= link_to 'Back', payment_types_path, class: 'btn btn-info custom-button' %>
   
             </div>
            <div class="card text-dark m-5" style="max-width: 12rem;">
             <%= link_to 'Edit', edit_payment_type_path, class: 'btn btn-warning custom-button' %>
   
             </div>
            <div class="card text-dark m-5" style="max-width: 12rem;">
           
            <%= button_to "Delete", payment_type_path(@payment_type), method: :delete, class: "btn btn-danger custom-button" %>
           
   
            </div>
         </div>
        </div>
      </div>
    </div>
 








