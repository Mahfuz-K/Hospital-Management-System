<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 custom-form">
     
      <%= form_with model: @bed_type do |form| %>
       <div class="form-group">
            <%= form.label :name, class: 'required' %>:<br>
              <%= form.text_field :name, class: 'form-control' %>
    
              <p class='error text-danger'><%= show_errors(@bed_type, :name) %></p>
</div>

        <br>
      
        <%= form.submit class: "btn btn-success full-width-button" %>
      
      <% end %>
    </div>
  </div>
</div>
