<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
     
      <%= form_with model: @bed_type do |form| %>
       
        <div class="form-group">
          <%= form.label :name %>:<br>
          <%= form.text_field :name, class: 'form-control' %>
          
          <p class='error'><%= show_errors(@bed_type, :name) %></p>
        </div>
        <br>
      
        <%= form.submit class: "btn btn-success" %>
      
      <% end %>
    </div>
  </div>
</div>
