<div class="container">
  <% flash.each do |key, message| %>
    <div class="alert alert-dismissible custom-alert <%= key.to_s == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="create-bed_type-link d-flex justify-content-between align-items-center mt-5">
    <h1 class="text-center">Bed Types</h1>
    <%= button_to new_bed_type_path, method: :get, class: 'btn btn-lg custom-button', style: 'background-color: rgb(52, 131, 172); color: azure;' do %>
      <i class="fa-solid fa-plus"></i>
      Create New bed_type
    <% end %>
  </div>
  <br>

  <div class="col-12 mt-4">
    <div class="card text-dark mb-3">
      <% if @bed_types.empty? %>
        <h2>No bed_type found matching your query.</h2>
      <% else %>
        <table class="table table-striped table-responsive-sm" style="font-size: 23px;">
          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">Bed Type</th>
              <th scope="col" class="text-right">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @bed_types.each_with_index do |bed_type, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= link_to bed_type.name, bed_type , style: 'text-decoration: none;'%></td>
                <td class="d-flex justify-content-end gap-4">
                  <%= link_to edit_bed_type_path(bed_type), class: 'btn btn-outline-primary custom-button' do %>
                    <i class="fa-solid fa-pen-to-square"></i>Edit
                  <% end %>
                  <%= button_to bed_type_path(bed_type), method: :delete, class: "btn btn-outline-danger custom-button" do %>
                    <i class="fa-solid fa-trash"></i>Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>











