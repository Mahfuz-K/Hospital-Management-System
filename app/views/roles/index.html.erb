<div class="container ">


<h1 class="text-center mt-4">Roles</h1>

<div class="create-role-link "><%= button_to 'Create New Role', new_role_path,method: :get, class: 'btn btn-lg custom-button' ,style: 'background-color: rgb(52, 131, 172);color: azure;' %>
    </div><br>

  <% @roles.each_with_index do |role,index| %>
    <div class="row justify-content-md-center ">
      <div class="col-8 mt-4" >
       <div class="card text-center shadow mb-5 rounded ">
          <div class="card-body custom-card">
            <h5 class="card-title">    <%= link_to role.name.upcase, role %></h5>
             
    </div>

          <div class="card-footer text-muted ">
            <small>created <%= time_ago_in_words(role.created_at) %> ago</small>
          </div>
        </div>
      </div>
   
  <% end %>
</div>
 </div>










