<div class="container-fluid">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-footer text-muted">
          <h1 class="text-center mt-4"><strong>Role: </strong><%= @role.name %></h1>
          <p>We do have following <%= @role.name %></p>
          <% @role.users.each_with_index do |user, index| %>
            <h5><strong><%= index + 1 %>.</strong> Name: <%= link_to user.username, user_path(user) %></h5>
            <p>email: <%= user.email %></p>
          <% end %>
          <small>Created <%= time_ago_in_words(@role.created_at) %> ago</small>
        </div>
        <div class="buttons d-flex justify-content-md-center">
          <div class="card text-dark m-5" style="max-width: 12rem;">
            <%= link_to 'Back', roles_path, class: 'btn btn-outline-info custom-button' %>
          </div>
          <div class="card text-dark m-5" style="max-width: 12rem;">
            <%= link_to 'Edit', edit_role_path, class: 'btn btn-outline-warning custom-button' %>
          </div>
          <div class="card text-dark m-5" style="max-width: 12rem;">
            <%= button_to "Delete", role_path(@role), method: :delete, class: "btn btn-outline-danger custom-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
