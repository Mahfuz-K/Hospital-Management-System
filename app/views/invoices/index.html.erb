
<div class="container ">
<% flash.each do |key, message| %>
    <div class="alert alert-dismissible custom-alert <%= key.to_s == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="create-invoice-link d-flex justify-content-between align-items-center mt-5">
    <h1 class="text-center">Invoices</h1>
    <%= button_to new_invoice_path, method: :get, class: 'btn btn-lg custom-button', style: 'background-color: rgb(52, 131, 172); color: azure;' do %>
      <i class="fa-solid fa-plus"></i>
      Create New Invoice
    <% end %>
  </div>
  <br>

  <div class="col-12 mt-4">
    <div class="card text-dark mb-3">
      <% if @invoices.empty? %>
        <h2>No Invoice found matching your query.</h2>
      <% else %>
        <table class="table table-striped table-responsive-sm" style="font-size: 23px;">
          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">Amount</th>
              <th scope="col" class="text-right">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @invoices.each_with_index do |invoice, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td>

                <i class="fa-solid fa-indian-rupee-sign"></i>

                <%= link_to invoice.amount, invoice_path(invoice) , style: 'text-decoration: none;' %></td>
                <td class="d-flex justify-content-end gap-4">
                  <%= link_to edit_invoice_path(invoice), class: 'btn btn-outline-primary custom-button' do %>
                    <i class="fa-solid fa-pen-to-square"></i>Edit
                  <% end %>
                  <%= button_to invoice_path(invoice), method: :delete, class: "btn btn-outline-danger custom-button" do %>
                    <i class="fa-solid fa-trash"></i>Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
 </div>
