<h2>Reset Password</h2>

<%= form_tag reset_password_path(token: @user.reset_password_token), method: :patch do %>
  <div class="form-group">
    <%= label_tag :password, 'New Password' %>
    <%= password_field_tag :password, nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, 'Confirm Password' %>
    <%= password_field_tag :password_confirmation, nil, class: 'form-control', required: true %>
  </div>
  <br>
  <%= submit_tag 'Reset Password', class: 'btn btn-success' %>
<% end %>