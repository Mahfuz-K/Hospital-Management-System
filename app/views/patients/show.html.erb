  </div>
<div class="card text-dark m-5" style="max-width: 13rem;">
  <%= link_to  patient_invoice_patient_path(@patient), class: 'btn btn-info custom-button', style: 'background-color: rgb(52, 131, 172); color: azure;' do%>
  <%=@patient.name %> invoice<%end  %>
