<% flash.each do |key, message| %>
  <div class="alert alert-dismissible custom-alert <%= key.to_s == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<div>
    <div class="container-fluid">

 
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          
          <div class="card-body">
            <h5 class="card-title">Name:   <%= @user.username %></h5>
            <h5 class="card-title text-warning">Email:   <%=  @user.email %></h5>
            <h5 class="card-title">Role:    <%= link_to @user.role.name, role_path(@user.role.id) %> </h5>
            <h5 class="card-title">Lock Status:  <%= @user.is_locked %> </h5>
           
        
              
         <div class="buttons d-flex flex-wrap justify-content-md-center">
            <div class="card text-dark m-5" style="max-width: 12rem;">
              <%= link_to 'Back', users_path, class: 'btn btn-info custom-button' %>
   
            </div>
            <div class="card text-dark m-5" style="max-width: 12rem;">
               <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning custom-button' %>
   
            </div>
            <div class="card text-dark m-5" style="max-width: 12rem;">
   
              <%= button_to "Delete", user_path(@user), method: :delete, class: "btn btn-danger custom-button" %>
   
            </div>
            
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@user.created_at) %> ago, 
            edited <%= time_ago_in_words(@user.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
 

</div>

</div>

    </div>