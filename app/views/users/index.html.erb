

 <div class="container ">
<% flash.each do |key, message| %>
    <div class="alert alert-dismissible custom-alert <%= key.to_s == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<div class="create-user-link d-flex justify-content-between align-items-center mt-5">
  <h1 class="text-center">Users</h1>
  
  <div class="d-flex">
    <%= button_to new_user_path, method: :get, class: 'btn btn-lg custom-button mr-4', style: 'background-color: rgb(52, 131, 172); color: azure;' do %>
      <i class="fa-solid fa-plus"></i>
      Create New User
    <% end %>
  
    <%= button_to locked_users_path, method: :get, class: 'btn btn-lg custom-button', style: 'background-color: rgb(52, 131, 172); color: azure;' do %>
      <i class="fa-solid fa-lock"></i>
      Locked Users
    <% end %>
  </div>
</div>

  </div>
  <br>

  <div class="col-12 mt-4">
    <div class="card text-dark mb-3">
      <% if @users.empty? %>
        <h2>No user found matching your query.</h2>
      <% else %>
        <table class="table table-striped table-responsive-sm" style="font-size: 18px;">
          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">user</th>
              <th scope="col" class="text-right">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td class="remove_underline"><%= index + 1 %></td>
                 <td><%= link_to user.username, user, style: 'text-decoration: none;' %></td>
                <td class="d-flex justify-content-end gap-4">
                  <%= link_to edit_user_path(user), class: 'btn btn-outline-primary custom-button' do %>
                    <i class="fa-solid fa-pen-to-square"></i>Edit
                  <% end %>
                  <%= button_to user_path(user), method: :delete, class: "btn btn-outline-danger custom-button" do %>
                    <i class="fa-solid fa-trash"></i>Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
 </div>










